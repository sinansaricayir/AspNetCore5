@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{int row = 1;}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gönderilen Mesajlar</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Gönderilen Kişi</th>
                                <th>Mail</th>
                                <th>Tarih</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <th>@row</th>
                                    <td>@item.Subject</td>
                                    <td>@item.RecieverName</td>
                                    <td>@item.Reciever</td>
                                    <td>@(((DateTime)item.Date).ToString("dd-MMM-yyy"))</td>
                                    <td><a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageID" class="btn btn-outline-primary btn-sm">Detay</a></td>
                                </tr>

                                row++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>