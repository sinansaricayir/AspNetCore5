@using EntityLayer.Concrete
@model List<Announcement>
@{ string color = "";}

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="icon-bell mx-0"></i>
        <span class="count"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <p class="mb-0 font-weight-normal float-left dropdown-header">Duyurular</p>
        @foreach (var item in Model.TakeLast(5))
        {
            if (item.Status == "Yeni Yazı")
            {
                color = "preview-icon badge-danger";
            }
            if (item.Status == "Yeni Duyuru")
            {
                color = "preview-icon badge-warning";
            }
            if (item.Status == "Yeni Haber")
            {
                color = "preview-icon badge-info";
            }
            if (item.Status == "Yeni Mesaj")
            {
                color = "preview-icon badge-success";
            }

<a class="dropdown-item preview-item">
    <div class="preview-thumbnail">
        <div class="@color">
            <i class="ti-info-alt mx-0"></i>
        </div>
    </div>
    <div class="preview-item-content">
        <h6 class="preview-subject font-weight-normal">@item.Title</h6>
        <p class="font-weight-light small-text mb-0 text-muted">
            @item.Status
        </p>
    </div>
</a>}
    </div>
</li>