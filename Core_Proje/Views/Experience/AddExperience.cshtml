
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>

<form class="form-group mt-4" method="post">
    <br />
    @Html.Label("Deneyim Adı")
    <input type="text" name="ExperienceName" value="" class="form-control" />

    <br />

    @Html.Label("Tarih")
    <input type="text" name="Date" value="" class="form-control" />
    <br />

    @Html.Label("Resim")
    <input type="text" name="ImageUrl" value="" class="form-control" />
    <br />

    @Html.Label("Açıklama")
    <input type="text" name="Description" value="" class="form-control" />
    <br />

    @Html.Label("Şirket Adı")
    <input type="text" name="CompanyName" value="" class="form-control" />
    <br />
    <button type="submit" class="btn btn-info">Ekle</button>
</form>

