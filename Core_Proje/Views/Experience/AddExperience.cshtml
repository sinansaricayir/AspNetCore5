@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>

@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <br />

    @Html.Label("Deneyim Adı")
    @Html.TextBoxFor(x => x.ExperienceName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ExperienceName, null, new { @class = "text-danger" })
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Date, null, new { @class = "text-danger" })
    <br />

    @Html.Label("Resim")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger" })
    <br />

    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
    <br />

    @Html.Label("Şirket Adı")
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CompanyName, null, new { @class = "text-danger" })
    <br />

    <button type="submit" class="btn btn-info">Ekle</button>
}