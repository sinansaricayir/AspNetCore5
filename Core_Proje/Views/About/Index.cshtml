@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Index", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <br />

                @Html.HiddenFor(x => x.AboutID)

                @Html.Label("Başlık")
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                <br />

                @Html.Label("Açıklama")
                @Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Yaş")
                @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Age, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Mail Adresi")
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Mail, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Telefon Numarası")
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Adres Bilgisi")
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })

                <br />

                @Html.Label("Resim Url")
                <img src="/aboutImage/@Model.ImageUrl" width="150" height="150" class="ml-4 mb-4" />
                <br />

                <input type="file" name="Picture" accept="image/*" class="form-control" />

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-outline-primary px-4 py-2">Güncelle</button>
                </div>

            }


        </div>
    </div>
</div>




