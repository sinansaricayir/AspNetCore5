@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="d-flex justify-content-end mb-4">
    <a href="/Testimonial/AddTestimonial" class="btn btn-success">+ Yeni Referans Ekle</a>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Ad </th>
                                <th> Görev</th>
                                <th> Şirket Adı</th>
                                <th class="text-center"> Sil </th>
                                <th class="text-center"> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @item.TestimonialID
                                    </th>
                                    <th class="budget">
                                        @item.ClientName
                                    </th>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Company
                                    </td>
                                    <td class="text-center">
                                        <a href="/Testimonial/DeleteTestimonail/@item.TestimonialID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-primary">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






