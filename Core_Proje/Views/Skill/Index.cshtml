@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="d-flex justify-content-end mb-4">
    <a href="/Skill/AddSkill" class="btn btn-success">+ Yeni Yetenek Ekle</a>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Oran</th>
                                <th class="text-center">Sil</th>
                                <th class="text-center">Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @item.SkillID
                                    </th>
                                    <td class="budget">
                                        @item.Title
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100">%@item.Value</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-primary">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


















