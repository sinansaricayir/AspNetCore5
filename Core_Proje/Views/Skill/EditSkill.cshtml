@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
            {

                <br />

                @Html.HiddenFor(x => x.SkillID)
                @Html.Label("Yetenek Adı")
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                <br />

                @Html.Label("Yetenek Oranı")
                @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                <br />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary px-4 py-2">Güncelle</button>
                </div>
            }

        </div>
    </div>
</div>




