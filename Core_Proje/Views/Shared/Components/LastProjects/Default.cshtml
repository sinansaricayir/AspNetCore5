@using EntityLayer.Concrete
@model List<Portfolio>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Son Eklenen Projeler</h4>
                <p class="text-muted mb-1">Proje Bilgileri</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">
                        @foreach (var item in Model.Take(5))
                        {
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        <img src="@item.ImageUrl" alt="" class="overflow-hidden" style="object-fit: cover; width: 100%; height: 100%;" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@item.Name</h6>
                                        <p class="text-muted mb-0">@item.ProjectUrl</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">@item.Date</p>
                                        <div class="progress">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: @item.StatusValue%" aria-valuenow="@item.StatusValue" aria-valuemin="0" aria-valuemax="100">%@item.StatusValue</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>