@using EntityLayer.Concrete
@model List<Message>
@{ int row = 1;}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim Mesaj Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th> Ad Soyad </th>
                                <th> Mail Adresi </th>
                                <th> Mesaj İçeriği </th>
                                <th> Tarih </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                  
                                    <td>@row</td>
                                    <td>@item.Name</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Content</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>
                                        @if (item.Status == true)
                                        {


                                            <div class="badge badge-outline-success">Okundu</div>

                                        }
                                        else
                                        {
                                            <div class="badge badge-outline-danger">Okunmadı</div>

                                        }
                                    </td>
                                </tr>
                                row++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
