@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="d-flex justify-content-end mb-4">
    <a href="/Portfolio/AddPortfolio" class="btn btn-success">+ Yeni Proje Ekle</a>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Proje Adı </th>
                                <th> Tarih</th>
                                <th> Tamamlanma Oranı</th>
                                <th> Proje Url</th>
                                <th class="text-center"> Sil </th>
                                <th class="text-center"> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">
                                    @item.PortfolioID
                                </th>
                                <th class="budget">
                                    @item.Name
                                </th>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @item.StatusValue%" aria-valuenow="@item.StatusValue" aria-valuemin="0" aria-valuemax="100">%@item.StatusValue</div>
                                    </div>
                                </td>
                                <td class="budget">
                                    @item.ProjectUrl
                                </td>
                                <td class="text-center">
                                    <a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                </td>
                                <td class="text-center">
                                    <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-primary">Düzenle</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






