@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="d-flex justify-content-end mb-4">
    <a href="/Service/AddService" class="btn btn-success">+ Yeni Hizmet Ekle</a>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Deneyim </th>
                                <th class="text-center"> Sil </th>
                                <th class="text-center"> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @item.ServiceID
                                    </th>
                                    <th class="budget">
                                        @item.Title
                                    </th>
                                    <td class="text-center">
                                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Service/EditService/@item.ServiceID" class="btn btn-primary">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

























