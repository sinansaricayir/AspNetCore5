@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmetler Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Hizmet Adı</th>
                <th scope="col" class="sort" data-sort="budget">Sil</th>
                <th scope="col" class="sort" data-sort="budget">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @item.ServiceID
                    </th>
                    <th class="budget">
                        @item.Title
                    </th>
                    <td>
                        <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                    <td>
                        <a href="/Service/EditService/@item.ServiceID" class="btn btn-primary">Düzenle</a>
                    </td>
                    <td></td>
                </tr>
            }
    </table>
</div>
<br />
<a href="/Service/AddService" class="btn btn-info">Hizmet Ekle</a>
