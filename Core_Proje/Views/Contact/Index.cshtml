@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    var row = 1;
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th>Gönderen</th>
                                <th>Mail</th>
                                <th>Tarih</th>
                                <th class="text-center"> Sil </th>
                                <th class="text-center"> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @row
                                    </th>
                                    <th class="budget">
                                        @item.Name
                                    </th>
                                    <th class="budget">
                                        @item.Mail
                                    </th>
                                    <td>
                                        @Convert.ToDateTime(item.Date).ToShortDateString()
                                    </td>
                                    <td class="text-center">
                                        <a href="/Contact/DeleteMessage/@item.MessageID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Contact/ShowMessage/@item.MessageID" class="btn btn-outline-success">Mesaj</a>
                                    </td>
                                </tr>
                                row++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






